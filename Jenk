pipeline {
    agent any

    stages {
        stage('stage1') {
            steps {
                echo 'my first stage'
            }
        }

        stage('stage2') {
            steps {
                echo 'my Second stage'
            }
        }

        stage('stage3 gitcheckout') {
            steps {
                git branch: 'main',
                    credentialsId: 'github-token',
                    url: 'https://github.com/phaniv2107/Jenkins-Zero-To-Hero.git'
            }
        }
        stage('mavenbuild'){
            steps {
                sh 'ls -ltr'
                // build the project and create a JAR file
                sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn clean package'
               }
        }
    }
}
